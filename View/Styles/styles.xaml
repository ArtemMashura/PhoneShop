<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="ButtonBase" TargetType="{x:Type Border}">
        <Setter Property="Width" Value="50"></Setter>
        <Setter Property="Height" Value="50"></Setter>
        <Setter Property="Background" Value="#FFFFF723"></Setter>
        <Setter Property="BorderBrush" Value="#FF525252"></Setter>
        <Setter Property="CornerRadius" Value="90"></Setter>
        
        <Style.Resources>
            <Style TargetType="{x:Type Button}">
                <Setter Property="BorderBrush" Value="Transparent"></Setter>
                <Setter Property="Background" Value="Transparent"></Setter>
                <Setter Property="VerticalAlignment" Value="Center"></Setter>
                <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                <Setter Property="FontSize" Value="23"></Setter>
            </Style>
        </Style.Resources>
    </Style>
</ResourceDictionary>